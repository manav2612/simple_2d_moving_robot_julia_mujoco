<mujoco model="aif_robot_scene">
  <compiler angle="radian" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -9.81"/>

  <default>
    <geom friction="0.5 0.1 0.1" rgba="0.7 0.7 0.7 1"/>
  </default>

  <worldbody>
    <geom name="ground" type="plane" size="2 2 0.1" rgba="0.9 0.9 0.9 1"/>
    <site name="goal" pos="0.5 0.5 0.1" size="0.05" rgba="0.2 0.8 0.2 1"/>
    <body name="robot" pos="0 0 0.1">
      <freejoint name="robot_free"/>
      <geom name="robot_geom" type="sphere" size="0.05" rgba="0.3 0.5 0.9 1"/>
      <site name="robot_site" pos="0 0 0" size="0.02" rgba="1 0 0 1"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="x_motor" joint="robot_free" ctrllimited="true" ctrlrange="-2 2" ctrlfrcrange="-5 5"/>
    <motor name="y_motor" joint="robot_free" ctrllimited="true" ctrlrange="-2 2" ctrlfrcrange="-5 5"/>
  </actuator>
</mujoco>
